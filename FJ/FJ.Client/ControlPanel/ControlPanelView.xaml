                        </DrawingPresenter.Drawing>
                    </DrawingPresenter>
                    <TextBlock Grid.Column="1" Text="Joukkue" IsVisible="{Binding IsExpanded}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>
