            </Button>
            <Button Height="70" Foreground="Blue" Command="{Binding NavigateToResultRegister}" Margin="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DrawingPresenter Grid.Column="0" HorizontalAlignment="Center">
                        <DrawingPresenter.Drawing>
