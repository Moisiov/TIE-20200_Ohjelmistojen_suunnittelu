                    <TextBlock Grid.Column="1" Text="Tulokset" IsVisible="{Binding IsExpanded}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
            </Button>
            <Button Height="70" Foreground="Blue" Command="{Binding NavigateToCompetitionGeneral}" Margin="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DrawingPresenter Grid.Column="0" HorizontalAlignment="Center">
                        <DrawingPresenter.Drawing>
                            <GeometryDrawing Brush="{DynamicResource Dark1}"
                                             Geometry="M21,18H19V15a1,1,0,0,0-1-1H13V11.29l1.13.59a1,1,0,0,0,1.45-1.05l-.4-2.37L16.9,6.77a1,1,0,0,0,.26-1,1,1,0,0,0-.81-.68L14,4.72,12.9,2.56a1,1,0,0,0-1.8,0L10,4.72l-2.39.35a1,1,0,0,0-.81.68,1,1,0,0,0,.26,1L8.82,8.46l-.4,2.37a1,1,0,0,0,1.45,1.05L11,11.29V14H6a1,1,0,0,0-1,1v3H3a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V20H8v1a1,1,0,0,0,2,0V19a1,1,0,0,0-1-1H7V16H17v2H15a1,1,0,0,0-1,1v2a1,1,0,0,0,2,0V20h4v1a1,1,0,0,0,2,0V19A1,1,0,0,0,21,18ZM12,8.63a1,1,0,0,0-.47.12l-.8.42.15-.9a1,1,0,0,0-.29-.88l-.65-.64.9-.13a1,1,0,0,0,.76-.54l.4-.82.4.82a1,1,0,0,0,.76.54l.9.13-.65.64a1,1,0,0,0-.29.88l.15.9-.8-.42A1,1,0,0,0,12,8.63Z" />
                        </DrawingPresenter.Drawing>
                    </DrawingPresenter>
                    <TextBlock Grid.Column="1" Text="Kilpailu" IsVisible="{Binding IsExpanded}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
            </Button>
            <Button Height="70" Foreground="Blue" Command="{Binding NavigateToAthleteCard}" Margin="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DrawingPresenter Grid.Column="0" HorizontalAlignment="Center">
                        <DrawingPresenter.Drawing>
                            <GeometryDrawing Brush="{DynamicResource Dark1}"
                                             Geometry="M256 256c52.805 0 96-43.201 96-96s-43.195-96-96-96-96 43.201-96 96 43.195 96 96 96zm0 48c-63.598 0-192 32.402-192 96v48h384v-48c0-63.598-128.402-96-192-96z" />
                        </DrawingPresenter.Drawing>
                    </DrawingPresenter>
                    <TextBlock Grid.Column="1" Text="Urheilija" IsVisible="{Binding IsExpanded}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Grid>
            </Button>
            <Button Height="70" Foreground="Blue" Command="{Binding NavigateToTeamCard}" Margin="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <DrawingPresenter Grid.Column="0" HorizontalAlignment="Center">
                        <DrawingPresenter.Drawing>
                            <GeometryDrawing Brush="{DynamicResource Dark1}"
