<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FJ.Client"
             x:Class="FJ.Client.App">

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush
            x:Key="Warning1"
            Color="#FFB000" />
        <SolidColorBrush
            x:Key="Error1"
            Color="#FF300D" />
        <SolidColorBrush
            x:Key="Main1"
            Color="#98BBFF" />
        <SolidColorBrush
            x:Key="Darkest1"
            Color="#371F99" />
        <SolidColorBrush
            x:Key="Dark1"
            Color="#7A66CC" />
        <SolidColorBrush
            x:Key="Lightest1"
            Color="#FFEFD9" />
        <SolidColorBrush
            x:Key="Light1"
            Color="#CC9466" />
    </Application.Resources>

</Application>
